{
  "name": "intermappler-translator",
  "version": "1.0.0",
  "description": "Sistema de traducci√≥n avanzado para InterMappler - Sistema de Mapeo Inteligente Global",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\"",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t intermappler-translator .",
    "docker:run": "docker run -p 3000:3000 intermappler-translator"
  },
  "keywords": [
    "translation",
    "i18n",
    "multilanguage",
    "intermappler",
    "mapping",
    "geospatial",
    "real-time"
  ],
  "author": "InterMappler Team <dev@intermappler.org>",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/intermappler/translation-system.git"
  },
  "bugs": {
    "url": "https://github.com/intermappler/translation-system/issues"
  },
  "homepage": "https://intermappler.org",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "redis": "^4.6.0",
    "ioredis": "^5.3.0",
    "mongoose": "^7.0.0",
    "joi": "^17.9.0",
    "axios": "^1.3.0",
    "node-cache": "^5.1.2",
    "rate-limiter-flexible": "^2.4.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/express": "^4.17.17"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "files": [
    "src/",
    "server.js",
    "package.json",
    "README.md",
    "LICENSE",
    ".env.example",
    "dockerfile"
  ],
  "volta": {
    "node": "18.16.0",
    "npm": "9.5.1"
  },
  "config": {
    "port": 3000,
    "env": "production"
  },
  "private": true
}